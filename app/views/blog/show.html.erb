<div class="box blog_img">
  <h1><%=@blog.title%></h1>
  <% @cat = Category.get_category(@blog.constant_id)%>
  <p id="tagline2" align="right">
  发布日期:<%= @blog.created_at.strftime('%Y-%m-%d %H:%M')%> /
  浏览:<%= @blog.view_count%> /
  博客类别:<%= link_to @cat.category, {:action=>:index, :id=>@cat.id, :catname=>@cat.category, :controller=>:category}%></p>
  <br/>

  <% if(@blog.video_url != nil&& !@blog.video_url.empty?)%>
    <p><embed src=<%= @blog.video_url%> quality="high" width="900" height="600" align="middle" allowScriptAccess="always" allowfullscreen="true" type="application/x-shockwave-flash"></embed></p>
    <br>
  <% end %>
  <p align="center"><%=show_content(@blog.content)%></p>
</div>
